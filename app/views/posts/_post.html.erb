<div class="panel panel-primary">
	<!-- heading -->
	<div class="panel-heading">
		<% if post.facebook == true %> <span class="label label-primary"></span> <% end %>
		<% if post.twitter == true %> <span class="label label-info"></span> <% end %>
		Scheduled on <%= post.scheduled_at %>
	</div>
	<!-- body -->
	<div class="panel-body">
		<%= post.content %>
	</div>
	<div class="panel-footer">
		<p><%= post.state.capitalize %></p>
	</div>
</div>